<header>
  <nav class="nav-bar">
    <ul>
      <li><%= link_to 'Test-Guru', root_path %></li>
      <% if user_signed_in? %>
        <li class="user_info">
          Welcome, <%= current_user.login %> Guru!
        </li>
        <li class="user_info">
          <%= link_to 'Logout',
                      destroy_user_session_path,
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %>
        </li>
      <% else %>
        <li>
          <%= link_to 'Sign up',  new_user_registration_path %>
        </li>
        <li>
          <%= link_to 'Sign in', new_user_session_path %>
        </li>
      <% end %>
    </ul>
  </nav>
</header>