<tr>
  <td><%= badge.title %></td>
  <td><%= badge.description %></td>
  <td><%= badge.rule %></td>
  <td><%= badge.rule_value %></td>
  <td>
    <img src="<%= badge.image_path %>" width="30", height="30">
    <% # = image_tag source: badge.image_path, size: [30, 30] %>
  </td> 
  <td><%= link_to 'Show', [:admin, badge] %></td>
  <td><%= link_to 'Edit', edit_admin_badge_path(badge) %></td>
  <td><%= link_to 'Destroy', [:admin, badge], method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>