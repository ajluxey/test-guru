<header>
  <nav class="nav-bar">
    <ul>
      <li><%= link_to 'Test-Guru', root_path %></li>
      <% if logged_in? %>
        <li>
          Welcome, <%= current_user.login %> Guru!
        </li>
        <li>
          <%= link_to 'Logout',
                      logout_path,
                      method: :post,
                      data: { confirm: 'Are you sure?' } %>
        </li>
      <% else %>
        <li>
          <%= link_to 'Sign up',  signup_path %>
        </li>
        <li>
          <%= link_to 'Sign in', login_path %>
        </li>
      <% end %>
    </ul>
  </nav>
</header>