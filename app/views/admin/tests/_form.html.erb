<%= form_with model: [:admin, @test], layout: true, class: 'form-control' do |form| %>
  <%= render 'shared/errors', model_instance: @test %>

  <p>
    <%= form.label :title %><br />
    <%= form.text_field :title, id: :test_title %>
  </p>

  <p>
    <%= form.label :level %><br />
    <%= form.number_field :level, id: :test_level %>
  </p>

  <p>
    <%= form.label :category_id %><br />
    <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>
  </p>

  <p>
    <%= form.label :time_to_pass %><br />
    <%= form.time_select :time_to_pass,
                         include_seconds: true,
                         prompt: true,
                         id: :test_time_to_pass %>
  </p>


  <p>
    <%= form.submit %>
  </p>

<% end %>