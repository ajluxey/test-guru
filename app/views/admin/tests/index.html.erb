<h2>All tests:</h2>

<%= link_to 'Create new test', new_admin_test_path %>

<table class="table">
  <thead>
    <th class="sort-by-this pointer">
      Title
      <%= octicon 'arrow-up', class: 'text-success hide' %>
      <%= octicon 'arrow-down', class: 'text-success hide' %>
    </th>
    <th class="sort-by-this pointer">
      Level
      <%= octicon 'arrow-up', class: 'text-success hide' %>
      <%= octicon 'arrow-down', class: 'text-success hide' %>
    </th>
    <th>Questions count</th>
    <th>Author</th>
    <th colspan="3">Action</th>
  </thead>
  
  <tbody>
    <%= render @tests %>
  </tbody>

</table>  